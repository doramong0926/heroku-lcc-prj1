
<%- layout('layout.profile') -%>

<div class="main main-raised">
    <div class="container fist-container" id="container-token-info">
        <div class="section text-center">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <h2 class="title">YOUR TOKEN INFOMATION</h2>
                    <h5 class="description">After check your balance of the token, if there is a problem contact to us</h5>
                </div>
            </div>
            <div class="row">
                <div class="col-10 ml-auto mr-auto">
                    <div class="features profile-viewer">                       
                        <div class="card">
                            <div class="profile-card">
                                <div class="table-responsive">
                                    <table class="table table-hover text-left">
                                        <thead>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row"><h4>ID</h4></th>
                                                <td><h4 id="userEmail"></h4></td>
                                            </tr>                                                 
                                            <tr>
                                                <th scope="row"><h4>Your referral address</h4></th>
                                                <td><h4 id="userReferralAddr"></h4></td>
                                            </tr>  
                                            <tr>
                                                <th scope="row"><h4>Your wallet address</h4></th>
                                                <td><h4 id="userWalletAddr"></h4></td>
                                            </tr>
                                            <tr>
                                                <th scope="row"><h4>BLC token you received</h4></th>
                                                <td><h4 id="investeReceviedToken"></h4></td>
                                            </tr>
                                            <tr>
                                                <th scope="row"><h4>Etherium you sent to buy token</h4></th>
                                                <td><h4 id="investeInvestEth"></h4></td>
                                            </tr>      
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 ml-auto mr-auto">
                    <div class="features profile-viewer-sm">                       
                        <div class="card">
                            <div class="profile-card">
                                <div class="table-responsive">
                                    <table class="table table-hover text-left">
                                        <thead>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row"># ID</th>
                                            </tr>
                                            <tr>
                                                <td id="userEmail-sm"></td>
                                            </tr>
                                            <tr>
                                                <th scope="row"># Your referral address</th>
                                            </tr>
                                                <td id="userReferralAddr-sm"></td>
                                            </tr>   
                                            <tr>
                                                <th scope="row"># Your wallet address</th>
                                            </tr>
                                                <td class="wallet-addr-sm" id="userWalletAddr-sm"></td>
                                            </tr>
                                            <tr>
                                                <th scope="row"># BLC token you received</th>
                                            </tr>
                                                <td id="investeReceviedToken-sm"></td>
                                            </tr>
                                            <tr>
                                                <th scope="row"># Etherium you sent to buy token</th>
                                            </tr>
                                                <td id="investeInvestEth-sm"></td>
                                            </tr>       
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="main main-raised" id="container-transaction-history">
    <div class="container">
        <div class="section text-center">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <h2 class="title">History of Transaction</h2>
                    <h5 class="description">You can check transaction history of your wallet.</h5>
                </div>
            </div>
            <div class="features">
                <div class="row">
                    <div class="col-11 ml-auto mr-auto">
                        <div class="table-responsive">
                            <table class="table table-hover text-center">
                                <thead>
                                </thead>
                                <tbody id="transactionHistory">                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>  
